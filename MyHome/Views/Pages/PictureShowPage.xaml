<Page
    x:Class="MyHome.Views.PictureShowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:MyHome.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">
    <Grid>
        <view:PictureShowControlSingle x:Name="PictureShowControlSingleView" Visibility="Visible" />
        <view:PictureSchowControlMulti x:Name="PictureShowControlMultiView" Visibility="Collapsed" />
        <view:PictureShowControlCarousel x:Name="PictureShowControlCarousel" Visibility="Collapsed" />
    </Grid>
</Page>